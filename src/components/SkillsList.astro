---
interface Props {
  skills: string[];
}

const { skills } = Astro.props;
---

{
  skills.length > 0 && (
    <div class="flex flex-wrap gap-2 mt-4 pt-4 border-t border-slate-200">
      {skills.map((skill) => (
        <span class="px-3 py-1 bg-slate-100 text-slate-700 rounded-full text-sm">
          {skill}
        </span>
      ))}
    </div>
  )
}
