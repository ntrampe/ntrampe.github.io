---
import Layout from "../layouts/Layout.astro";
import Profile from "../components/Profile.astro";
import Timeline from "../components/Timeline.astro";
import Projects from "../components/Projects.astro";

import { profile } from "../data/profile";
import { experiences } from "../data/experience";
import { projects } from "../data/projects";
import { misc } from "../data/misc";
import MarkdownContent from "../components/MarkdownContent.astro";
import Card from "../components/Card.astro";
---

<Layout title="Nicholas Trampe">
  <main class="px-4 py-8 space-y-8">
    <section class="max-w-xl mx-auto">
      <Profile profile={profile} />
    </section>

    <section id="experience" class="max-w-3xl mx-auto">
      <Timeline experiences={experiences} />
    </section>

    <section id="projects" class="max-w-5xl mx-auto">
      <h2 class="text-4xl text-center text-slate-400 font-light mb-2 md:mb-4">
        Projects
      </h2>
      <Projects projects={projects} />
    </section>

    {
      misc.length > 0 && (
        <section class="max-w-3xl mx-auto">
          <h2
            id="miscellaneous"
            class="text-4xl text-center text-slate-400 font-light mb-2 md:mb-4"
          >
            Miscellaneous
          </h2>
          <Card>
            <ul class="list-disc pl-5 space-y-1">
              {misc.map((item) => (
                <li class="text-sm text-slate-600">
                  <MarkdownContent content={item} />
                </li>
              ))}
            </ul>
          </Card>
        </section>
      )
    }
  </main>
</Layout>
